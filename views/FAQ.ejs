



<%- include('partials/header') %>
         <head><style>
    body {background-color: powderblue;}
    /* h1   {color: blue;}
    p    {color: red;} */
    </style>
    </head>
<section>
    <div class="container-fluid">
   

    </div>
    <div>

    </div>
    <section>
        <div>
        <h3>User queries<h3>
        <%posts.forEach(function(query){%>
           <p> <h5><%=query.title%><h5></p>
            <p><%=query.content%></p>
            <form class="text-start" action="/FAQ" method="post">
            <div class="form-group">
                <div class="mb-3">
                  <label for="" class="">Reply</label> 
                  <% if(query.reply===""){%>
                  <textarea name="queryBody" class="form-control" cols="5" rows="2" placeholder="Answer"></textarea>
                  <button type="submit" class="btn btn-primary" name="queryId" value="<%=query._id%>">Submit</button>
                  <%}else{%>
                      <p><%=query.reply%></p>
                  <%}%>
                </div>
                </div>
             </form>
   <% })%>
        </div>
    </section>
</section>

