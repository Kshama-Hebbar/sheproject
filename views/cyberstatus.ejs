<!DOCTYPE html>
<html leng="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/style.css">
        <title>Doctors list</title>
     <link rel="stylesheet" href="style.css">
    </head>
    <div class="box" id="heading">
        <h1>Police details</h1>

     
         <div>
          <table class="box">
          <thead class="table">

      <div class="box" id="heading">
         <div>
          <table class="table">
          <thead>

            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">Address</th>
              <th scope="col">Certification number</th>
              <th scope="col">Authentication image</th>

            </tr>
          </thead>
          <% for(var i=0;i<newListItems.length;i++){ %>
            <div class="item">
                    <tbody>
                      <tr>
                        <th scope="row"><%=i+1%></th>
                        <td><%=newListItems[i].username%></td>
                        <td><%=newListItems[i].address%></td>
                        <td><%=newListItems[i].cno%></td>
                        <td><img src="/uploadi/<%=newListItems[i].image%>"></td>
                

                        <td><form action="/statusAccept" method="post"><button name="accept" value="<%=newListItems[i]._id%>"><%=newListItems[i].accept%></button></form></td>
                        <td><form action="/statusDeny" method="post"><button name="deny" value="<%=newListItems[i]._id%>"><%=newListItems[i].deny%></button></form></td>

                       <% if(newListItems[i].status==="Pending"){%>
                        <td><form action="/statusAccept" method="post"><button name="accept" value="<%=newListItems[i]._id%>">Accept</button></form></td>
                        <td><form action="/statusDeny" method="post"><button name="deny" value="<%=newListItems[i]._id%>">Deny</button></form></td>
                        <%}%>
                        <%if(newListItems[i].status==="Accepted"){%>
                          <td><form action="/statusAccept" method="post"><button name="accept" value="<%=newListItems[i]._id%>">Accepted</button></form></td>
                        <%}%>
                        <%if(newListItems[i].status==="Denied"){%>
                          <td><form action="/statusDeny" method="post"><button name="deny" value="<%=newListItems[i]._id%>">Denied</button></form></td>
                        <%}%>

                       
                      </tr>
                  </div>
     <%} %>
    </table>
    </html>